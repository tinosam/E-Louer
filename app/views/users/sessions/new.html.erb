<section id="contact-us" class="contact-us section">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="title-line center">
          <p>Se connecter</p>
          <h2>En tant qu' <span>Etudiant</span></h2>
        </div>
      </div>
    </div>
    <div class="row">
      <!-- Contact Form -->
      <div class="col-lg-8 offset-lg-2 col-12">
        <form class="form" method="post" action="http://www.iamshakil.me/themes/traveltrek/mail/mail.php">
          <div class="row">
            <div class="col-lg-6 col-md-6 col-12">
              <div class="form-group">
                <input type="text" name="name" placeholder="Name" required="required">
              </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
